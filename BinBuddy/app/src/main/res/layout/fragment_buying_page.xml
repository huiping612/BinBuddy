<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLBuying"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.green_plaza.BuyingPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CLHomeHeader"
        android:layout_width="417dp"
        android:layout_height="255dp"
        android:background="@drawable/home_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/BtnBack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_icon" />

        <ImageView
            android:id="@+id/IVBuying"
            android:layout_width="176dp"
            android:layout_height="149dp"
            android:layout_marginStart="-16dp"
            android:src="@drawable/buying_header"
            app:layout_constraintBottom_toBottomOf="@+id/SVBrowseItem"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TVPlazaHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="112dp"
            android:fontFamily="@font/katibeh"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="10"
            android:shadowRadius="2"
            android:text="Green Plaza"
            android:textColor="#FFFFFF"
            android:textSize="56sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:id="@+id/SVBrowseItem"
            android:layout_width="296dp"
            android:layout_height="37dp"
            android:layout_marginTop="188dp"
            android:background="@drawable/search_bar_background"
            android:queryHint="Search"
            app:iconifiedByDefault="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.862"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CLHomeHeader" />

    <!-- Ensure the GridView takes the remaining space below the divider -->
    <GridView
        android:id="@+id/gridView1"
        android:layout_width="347dp"
        android:layout_height="427dp"
        android:layout_marginTop="8dp"
        android:horizontalSpacing="16dp"
        android:numColumns="2"
        android:padding="16dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />
</androidx.constraintlayout.widget.ConstraintLayout>
