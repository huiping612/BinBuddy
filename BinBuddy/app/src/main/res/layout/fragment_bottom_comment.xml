<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#D9D9D9"
    tools:context="com.example.blog.BottomCommentFragment">

    <View
        android:id="@+id/dividerView"
        android:layout_width="70dp"
        android:layout_height="2dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="28dp"
        android:background="#B7B6B6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVTitleComment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Comments"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentsRecyclerView"
        android:layout_width="413dp"
        android:layout_height="470dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVTitleComment">

    </androidx.recyclerview.widget.RecyclerView>

    <EditText
        android:id="@+id/ETComments"
        android:layout_width="412dp"
        android:layout_height="100dp"
        android:background="#D9D9D9"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:hint="Add a comment..."
        android:inputType="text"
        android:padding="8dp"
        android:textColorHint="#808080"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentsRecyclerView" />

    <ImageButton
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/article_detail_send_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ETComments" />

</androidx.constraintlayout.widget.ConstraintLayout>