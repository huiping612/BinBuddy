<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Navigation Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="@drawable/top_nav_background"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@drawable/top_nav_circle"
            android:contentDescription="Back"
            android:layout_gravity="start|center_vertical"
            android:padding="8dp" />



        <!-- Title -->
        <TextView
            android:id="@+id/top_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quiz Challenge"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

    <!-- Image -->


    <!-- Text -->


    <!-- Bottom Navigation Container -->

    <ImageView
        android:id="@+id/leaderboard_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_circle"
        android:contentDescription="Leaderboard"
        android:padding="8dp"
        android:src="@drawable/ic_leaderboard"
        app:layout_constraintEnd_toStartOf="@+id/library_button"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar" />

    <ImageView
        android:id="@+id/library_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_circle"
        android:contentDescription="Library"
        android:padding="8dp"
        android:src="@drawable/ic_library"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar" />

    <TextView
        android:id="@+id/TVLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:textColor="#445e44"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/TVLibrary"
        app:layout_constraintTop_toBottomOf="@+id/leaderboard_button"
        tools:text="Leaderboard" />

    <TextView
        android:id="@+id/TVLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:textColor="#445e44"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/library_button"
        tools:text="Library" />

    <ImageView
        android:id="@+id/question_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_circle_darkgreen"
        android:contentDescription="Question"
        android:padding="8dp"
        android:src="@drawable/ic_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar" />

    <TextView
        android:id="@+id/TVQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:textColor="#445e44"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_button"
        tools:text="Question" />


    <View
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="380dp"
        android:background="#ccf1cc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_toolbar"></View>

    <ImageView
        android:id="@+id/quizcenter_button"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_circle"
        android:contentDescription="QuizCenter"
        android:padding="8dp"
        android:src="@drawable/ic_quiz_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVLeaderboard" />

    <TextView
        android:id="@+id/TVDescription"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="88dp"
        android:gravity="center_horizontal"
        android:textColor="#445e44"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVLeaderboard"
        tools:text="How it works: Participants will
encounter multiple-choice" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/darkGreen"
        android:text="Beginner"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVDescription" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="81dp"
        android:backgroundTint="@color/darkGreen"
        android:text="Intermediate"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="81dp"
        android:backgroundTint="@color/darkGreen"
        android:text="Advanced"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/bottom_nav_background"
        app:itemIconSize="48dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom"/>

    <ImageView
        android:id="@+id/center_button"
        android:layout_width="82dp"
        android:layout_height="88dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/bottom_nav_center_circle"
        android:elevation="10dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom"/>




</androidx.constraintlayout.widget.ConstraintLayout>
