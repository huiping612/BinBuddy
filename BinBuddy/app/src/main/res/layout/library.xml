<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Navigation Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="@drawable/top_nav_background"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@drawable/top_nav_circle"
            android:contentDescription="Back"
            android:layout_gravity="start|center_vertical"
            android:padding="8dp" />



        <!-- Title -->
        <TextView
            android:id="@+id/top_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Library"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Image -->
    <ImageView
        android:id="@+id/question_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="26dp"
        android:contentDescription="Question"
        android:padding="8dp"
        android:src="@drawable/ic_library"
        app:layout_constraintEnd_toEndOf="@+id/top_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/totalquizbg"
        android:layout_width="243dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/region_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar">
    </View>

    <TextView
        android:id="@+id/totalquiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="156dp"
        android:textColor="#445e44"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:text="Total quizzes attempted: 30" />

    <ImageView
        android:id="@+id/bia"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Question"
        android:padding="8dp"
        android:src="@drawable/bia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar" />

    <TextView
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="304dp"
        android:textColor="#dce1dc"
        android:textSize="50sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:text="15" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="192dp"
        android:textColor="#dce1dc"
        android:textSize="50sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:text="9" />

    <TextView
        android:id="@+id/number3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="66dp"
        android:textColor="#dce1dc"
        android:textSize="50sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:text="6" />

    <View
        android:id="@+id/quizcategorybg"
        android:layout_width="135dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/region_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar">
    </View>

    <TextView
        android:id="@+id/quizcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="265dp"
        android:textColor="#445e44"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:text="Quiz Category" />

    <ImageView
        android:id="@+id/parts_4"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:src="@drawable/parts_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar" />

    <TextView
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="252dp"
        android:textColor="#aac8aa"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:text="Achievements: 15" />

    <TextView
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="68dp"
        android:textColor="#aac8aa"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:text="Achievements: 9" />

    <TextView
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="252dp"
        android:textColor="#aac8aa"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:text="Achievements: 6" />

    <TextView
        android:id="@+id/c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="57dp"
        android:textColor="#aac8aa"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:text="Incorrect Answers: 5" />


    <ImageView
        android:id="@+id/bottom_green2"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="-90dp"
        android:padding="8dp"
        android:src="@drawable/bottom_green2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>
