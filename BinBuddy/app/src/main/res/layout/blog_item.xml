<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">


        <ImageView
            android:id="@+id/IVBackground"
            android:layout_width="187dp"
            android:layout_height="262dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/article_background" />

        <ImageView
            android:id="@+id/IVComment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/article_background" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/IVProfileImage1"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/IVComment1"
            app:shapeAppearanceOverlay="@style/CircularImageViewStyle" />

        <TextView
            android:id="@+id/TVBlogUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:layout_marginTop="22dp"
            android:text="Save_Earthhhhh"
            android:textColor="#445E44"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVBlogTitle"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="Small Actions, Big Impact: The Power of Recycling"
            android:textSize="9sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVBlogUser" />

        <TextView
            android:id="@+id/TVBlogDescription"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:text="Recycling might seem like a small action, but it plays a major role in protecting our planet. By reusing materials like paper, plastic, and metal, we reduce the need for new resources, save energy, and cut down on pollution. Hereâ€™s a quick look at why recycling matters and simple ways you can start today!"
            android:textSize="9sp"
            app:layout_constraintStart_toStartOf="@+id/IVComment1"
            app:layout_constraintTop_toBottomOf="@+id/TVBlogTitle" />

        <ImageView
            android:id="@+id/IVPhoto"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@+id/IVComment1"
            app:layout_constraintTop_toBottomOf="@+id/TVBlogDescription"
            app:srcCompat="@drawable/article_picture" />
</androidx.constraintlayout.widget.ConstraintLayout>