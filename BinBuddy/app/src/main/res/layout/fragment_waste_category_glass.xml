<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#445E44">

    <!-- Back Button -->

    <!-- Image Section -->

    <ImageButton
        android:id="@+id/BtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <!-- CardView with Scrollable Text -->

    <ImageView
        android:id="@+id/recycle_image"
        android:layout_width="185dp"
        android:layout_height="173dp"
        android:layout_marginTop="60dp"
        android:contentDescription="Recycling box"
        android:src="@drawable/glass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/recycle_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Decorative Line -->
                <View
                    android:layout_width="48dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="#D9D9D9" />

                <!-- Title -->
                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How to recycle glass"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:text="1. Understand Recyclable and Non-Recyclable Glass. Not all glass can be recycled. Recyclable glass includes bottles, jars, and containers used for food and beverages. Non-recyclable items include mirrors, window glass, ceramics, light bulbs, and glass that is heat-resistant or tempered. These types of glass can damage recycling equipment or contaminate the batch.
                    \n\n2. Remove Contaminants.  Clean the glass items before recycling. Rinse out any food or liquid residues, as they can contaminate the recycling process. Labels and caps can usually stay on since they are removed during processing.
                     \n\n3. Sort by Color. Separate glass by colorâ€”clear, green, and brown. This is essential because different colors are processed separately to produce glass products of the same shade.
                    \n\n4. Handle Broken Glass Carefully. If you have broken glass, place it in a secure container or wrap it to avoid injury. Check with your local recycling center if they accept broken glass, as policies may vary.
                    \n\n5. Drop It Off at a Recycling Facility. Take your clean and sorted glass to the nearest recycling center or use curbside recycling services if available in your area. Ensure you follow local recycling guidelines for glass disposal."
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
